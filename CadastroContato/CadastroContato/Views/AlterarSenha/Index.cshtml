@using CadastroContato.Enums

@model AlterarSenhaModel

@{
    ViewData["Title"] = "Alteração de senha do usuário";
}

@if (TempData["MensagemSucesso"] != null) {
    <div class="alert alert-success text-center" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="text-center">
    <h1>Alteração de senha do usuário</h1>
</div>

<form asp-controller="AlterarSenha" asp-action="UpdatePassword" method="post">

    <div class="form-group">
        <label for="senhaAtual">Senha Atual</label>
        <input type="password" asp-for="SenhaAtual" class="form-control" placeholder="Digite a senha atual do usuário">
        @Html.ValidationMessageFor(model => model.SenhaAtual)
    </div>

    <div class="form-group">
        <label for="novaSenha">Nova Senha</label>
        <input type="password" asp-for="NovaSenha" class="form-control" placeholder="Digite a nova senha do usuário">
        @Html.ValidationMessageFor(model => model.NovaSenha)
    </div>

    <div class="form-group">
        <label for="confirmarSenha">Confirmar nova senha</label>
        <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" placeholder="Digite a confirmação da nova senha do usuário">
        @Html.ValidationMessageFor(model => model.ConfirmarNovaSenha)
    </div>

    <button type="submit" class="btn btn-info">Salvar</button>
    <a class="btn btn-info" role="button" asp-controller="Home" asp-action="Index">Voltar</a>
</form>


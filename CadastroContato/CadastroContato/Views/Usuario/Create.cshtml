@using CadastroContato.Enums

@model UsuarioModel

@{
    ViewData["Title"] = "Cadastro de usuario";
}

    <div class="text-center">
        <h1>Cadastro de usuario</h1>
    </div>

    <form asp-controller="Usuario" asp-action="Create" method="post">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuario">
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do usuario">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            <label for="cellphone">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuario">
            @Html.ValidationMessageFor(model => model.Login)
        </div>
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuario">
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="form-group">
            <label for="perfil">Perfil</label>
            <select asp-for="Perfil" class="form-control">
                <option value="0">Selecione</option>
                <option value="@PerfilEnum.Admin">Admin</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
        </div>
        <button type="submit" class="btn btn-info">Salvar</button>
        <a class="btn btn-info" role="button" asp-controller="Usuario" asp-action="Index">Voltar</a>
    </form>


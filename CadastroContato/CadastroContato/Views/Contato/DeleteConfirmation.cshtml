@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato? (@Model.Nome) ?</h3>
    <a class="btn btn-info" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Delete" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>



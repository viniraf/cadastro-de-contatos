@model ContatoModel

@{
    ViewData["Title"] = "Cadastro de contato";
}

    <div class="text-center">
        <h1>Cadastro de Contato</h1>
    </div>

<form asp-controller="Contato" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text"asp-for="Email" class="form-control" placeholder="Digite o email do contato">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        <label for="cellphone">Celular</label>
        <input type="text" asp-for="Celular"class="form-control" placeholder="Digite o celular do contato">
        @Html.ValidationMessageFor(model => model.Celular)
    </div>
    <button type="submit" class="btn btn-info">Salvar</button>
    <a class="btn btn-info" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>


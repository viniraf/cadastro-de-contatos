@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de Contatos";
}



<div>

    <div class="text-center">
        <h1 class="display-4">Listagem de contatos</h1>
    </div>


    @if (TempData["MensagemSucesso"] != null) {
        <div class="alert alert-success text-center" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <div>
        <a class="btn btn-info" role="button" asp-controller="Contato" asp-action="Create">Adicionar novo contato</a>
    </div>
    <br />

    <table id="table-contatos" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any()) {
                foreach (var contato in Model) {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-info" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Update">Editar</a>
                            </div>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="DeleteConfirmation">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


